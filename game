        let selected = ['fun'];
        let playlist = [];
        let index = -1;
        let audio = true;

        const setupSc = document.getElementById('setup');
        const gameSc = document.getElementById('game');
        const qText = document.getElementById('q-text');
        const bCat = document.getElementById('b-cat');
        const count = document.getElementById('count');

        document.querySelectorAll('.cat-card').forEach(c => {
            c.onclick = () => {
                const cat = c.dataset.cat;
                if(c.classList.contains('selected')) {
                    if(selected.length > 1) {
                        c.classList.remove('selected');
                        selected = selected.filter(v => v !== cat);
                    }
                } else {
                    c.classList.add('selected');
                    selected.push(cat);
                }
            };
        });

        function speak(t) {
            if(!audio || !window.speechSynthesis) return;
            window.speechSynthesis.cancel();
            const u = new SpeechSynthesisUtterance(t);
            u.lang = 'fr-FR';
            u.rate = 1;
            const voices = window.speechSynthesis.getVoices();
            u.voice = voices.find(v => v.lang.startsWith('fr') && v.name.includes('Google')) || voices.find(v => v.lang.startsWith('fr'));
            window.speechSynthesis.speak(u);
        }

        function show() {
            if(window.speechSynthesis.paused) window.speechSynthesis.resume();
            index++;
            if(index >= playlist.length) { index = 0; playlist.sort(() => Math.random() - 0.5); }
            const item = playlist[index];
            qText.style.opacity = 0;
            setTimeout(() => {
                qText.textContent = item.text;
                bCat.textContent = item.label;
                count.textContent = `${index + 1} / ${playlist.length}`;
                qText.style.opacity = 1;
                speak(item.text);
            }, 250);
        }

        document.getElementById('start').onclick = () => {
            playlist = [];
            selected.forEach(c => {
                data[c].forEach(txt => playlist.push({ text: txt, label: c.toUpperCase() }));
            });
            playlist.sort(() => Math.random() - 0.5);
            index = -1;
            setupSc.classList.remove('active');
            gameSc.classList.add('active');
            show();
        };

        document.getElementById('next').onclick = show;
        document.getElementById('to-menu').onclick = () => { gameSc.classList.remove('active'); setupSc.classList.add('active'); window.speechSynthesis.cancel(); };
        document.getElementById('toggle-audio').onclick = () => {
            audio = !audio;
            document.getElementById('toggle-audio').textContent = audio ? "üîä ON" : "üîá OFF";
            if(!audio) window.speechSynthesis.cancel();
        };

        window.speechSynthesis.onvoiceschanged = () => window.speechSynthesis.getVoices();
    </script>
